{
  "name": "mandrii",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/andrii-maglovanyi/mandrii.git"
  },
  "scripts": {
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:services\"",
    "dev:web": "pnpm --filter web dev",
    "dev:services": "cd apps/services && uv run uvicorn src.main:app --reload",
    "build": "pnpm --filter web build",
    "lint": "pnpm --filter web lint",
    "prepare": "husky",
    "type-check": "pnpm --filter web type-check"
  },
  "dependencies": {
    "concurrently": "^9.2.1"
  },
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6"
  }
}
